{% extends 'partials/layout.twig' %}

{% block content %}
    <h2>Admin</h2>

    <form action="admin">
        <p>
            URL: <input type="text" name="add" placeholder="https://example.com/feed.xml">
            <button type="submit">Add</button>
        </p>
    </form>

    {% include 'partials/feedback.twig' %}

    <table>
        {% for feed in suggestions %}
            <tr>
                <td>
                    <a href="{{ feed.homepage }}">{{ feed.feedtitle }}</a>
                </td>
                <td>
                    <a href="admin?remove={{ feed.feedid }}"><button>Remove</button></a>
                    <a href="admin?add={{ feed.feedurl }}"><button>Add</button></a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <form action="admin">
        <p>
            Remove by ID: <input type="text" name="delete" placeholder="AABBCCDDEEFF...">
            <button type="submit">Remove</button>
        </p>
    </form>

{% endblock %}
