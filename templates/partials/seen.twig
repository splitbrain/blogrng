{% if seen %}

    <h3>Your recent visits</h3>

    <p>These are the posts you recently saw - just in case you want to revisit them or subscribe.</p>

    <ul>
        {% for post in seen %}
            <li>
                <a href="{{ post.itemurl }}">{{ post.itemtitle }}</a> from
                <a href="{{ post.homepage }}">{{ post.feedtitle }}</a>
                <a href="{{ post.feedurl }}" title="subscribe">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         aria-label="RSS" role="img"
                         viewBox="0 0 512 512" style="width:1.2em; height: 1.2em; vertical-align: middle">
                        <rect
                                width="512" height="512"
                                rx="15%"
                                fill="#f80"/>
                        <circle cx="145" cy="367" r="35" fill="#fff"/>
                        <path fill="none" stroke="#fff" stroke-width="60"
                              d="M109 241c89 0 162 73 162 162m114 0c0-152-124-276-276-276"/>
                    </svg>
                </a>

            </li>
        {% endfor %}
    </ul>

{% endif %}
