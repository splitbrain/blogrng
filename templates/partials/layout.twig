{% set title = 'Discover the IndieWeb, one blog post at a time.' %}
{% set description = 'A website to randomly explore the IndieWeb. Simply click a button and you will be redirected to a random post from a personal blog.' %}
<!DOCTYPE html>
<html lang="en">
<head>
